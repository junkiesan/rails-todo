<h1>Todolist:</h1>
<% @todos.each do |todo| %>
  <div class="list">
    <% if todo.status == false %>
      <i class="fa fa-square-o"></i>
    <% else %>
      <i class="fa fa-check-square-o"></i>
    <% end %>
    <%= link_to todo.title, todo_path(todo.id) %>
  </div>
<% end %>

<%= link_to 'Add a new todo', new_todo_path %>