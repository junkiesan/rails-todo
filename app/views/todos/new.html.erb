<h1>New todo</h1>
  <%= form_for(@todo) do |f|  %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <%= f.date_select :deadline, class: 'datepicker' %>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

<%= link_to 'Back', todos_path %>
