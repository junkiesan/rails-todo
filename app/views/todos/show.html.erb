<h1> <%= @todo.title %> </h1>

<p> <%= @todo.description %> </p>
<p> <%= @todo.deadline.strftime("%d/%m/%Y") %> </p>

<% if @todo.status == true %>
  <p>Todo completed</p>
<% else %>
  <p>Todo not completed</p>
<% end %>

  <%= form_for(@todo) do |f| %>
    <div class="checkbox">
      <label>
        <%= f.check_box :status %> Status
      </label>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

<%= link_to 'Back', todos_path %>
